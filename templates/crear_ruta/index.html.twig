{% extends '@EasyAdmin/page/content.html.twig' %}
{% block title %}Hello CrearRutaController! {% endblock %}


  
      {% block stylesheets %}
    <link rel="stylesheet" href="css/jquery-ui.css">
    <link rel="stylesheet" href="css\jquery-ui.structure.css">
    <link rel="stylesheet" href="css/jquery-ui.theme.css">
    <link rel="stylesheet" href="css/richtext.min.css">
    <link rel="stylesheet" href="css/image-uploader.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="./css/jquery.datetimepicker.css">

    <link rel="stylesheet" href="css/estilo.css">
    
    {% endblock %}


    {% block javascripts %}
  
    <script src="js/jquery-3.7.1.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js\jquery-ui.min.js"></script>
    <script src="js/jquery.richtext.min.js"></script>
    <script src="js/image-uploader.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <script src="https://kit.fontawesome.com/91464fdedc.js" crossorigin="anonymous"></script>

    <script src="js/crearRuta.js"></script>
        {% endblock %}




{% block body %}
<body>
    <div id="modal">
        <div id="main">
            <h1>Crear Ruta</h1>
                <div id="tabs">
                    <ul>
                    <li><a href="#tabs-1">Información</a></li>
                    <li><a href="#tabs-2">Visitas</a></li>
                    </ul>
                    <div id="tabs-1">
                        <label for="titulo">Titulo:</label>
                        <input type="text" name="titulo" id="inputTitulo"><br>
                        <label for="descripcion">Descripción:</label>
                        <textarea name="descripcion" id="textarea" cols="1" rows="1"></textarea>
                        <label for="subirImagen">Subir Imagen:</label>
                        <div id="input-images"></div>
                        <label for="puntoEncuentro">Punto de encuentro:</label><br>
                        <label for="x">Punto X:</label>
                        <input type="number" name="x" id="x">
                        <label for="y">Punto Y:</label>
                        <input type="number" name="y" id="y">
                        <button id="btnMapa">Mapa</button><br>
                        <label for="aforo">Aforo:</label>
                        <input type="number" min="6" max="20">
                        <br>
                        <label for="fecha">Fecha inicio: </label>
                        <input type="text" name="fecha" id="fecha" value="" />        
                        <label for="fecha">Fecha fin: </label>
                        <input type="text" name="fechafin" id="fechafin" value="" />
                    </div>
                   <div id="tabs-2">
                        <label for="salutation">Selecciona una ciudad</label>
                        <select name="salutation" id="salutation">
                          <option disabled selected>Click en una</option>
                          <option>Jaen</option>
                          <option>Cordoba</option>
                          <option>Malaga</option>
                          <option>Cadiz</option>
                          <option>Sevilla</option>
                        </select>

                        <br>

                        <ul id="sortable1" class="droptrue">
                            <li class="ui-state-default">Can be dropped..</li>
                            <li class="ui-state-default">..on an empty list</li>
                            <li class="ui-state-default">Item 3</li>
                            <li class="ui-state-default">Item 4</li>
                            <li class="ui-state-default">Item 5</li>
                          </ul>
                           
                          <ul id="sortable2" class="dropfalse">
                            <li class="ui-state-highlight">Cannot be dropped..</li>
                            <li class="ui-state-highlight">..on an empty list</li>
                            <li class="ui-state-highlight">Item 3</li>
                            <li class="ui-state-highlight">Item 4</li>
                            <li class="ui-state-highlight">Item 5</li>
                          </ul>
                           
                          <!-- <ul id="sortable3" class="droptrue">
                          </ul> -->
                           
                          <br style="clear:both">
                        
                    </div>

                    <div id="tabs-3">


               <div>
                            Periodo:  
                            <label for="from">From</label>
                            <input type="text" id="from" name="from">
                            <label for="to">to</label>
                            <input type="text" id="to" name="to">
                          </div>
                          
                          <div id="diasSemana">
                            <input type="checkbox" id="lunes" name="dia" value="L">
                            <label for="lunes">Lunes</label>
                            <input type="checkbox" id="martes" name="dia" value="M">
                            <label for="martes">Martes</label>
                            <input type="checkbox" id="miercoles" name="dia" value="X">
                            <label for="miercoles">Miércoles</label>
                            <input type="checkbox" id="jueves" name="dia" value="J">
                            <label for="jueves">Jueves</label>
                            <input type="checkbox" id="viernes" name="dia" value="V">
                            <label for="viernes">Viernes</label>
                            <input type="checkbox" id="sabado" name="dia" value="S">
                            <label for="sabado">Sábado</label>
                            <input type="checkbox" id="domingo" name="dia" value="D">
                            <label for="domingo">Domingo</label>
                          </div>
                          
                          <div>
                            <input type="time" id="time" />
                            
                            <label for="salutation">Seleciona un guia</label>
                            <select name="salutation" id="salutation">
                              <option disabled selected>....</option>
                              <option>Messi</option>
                              <option>cr7</option>
                              <option>Neymar</option>
                              <option>Etó</option>
                              <option>Other</option>
                            </select>

                            <button id="guardar" onclick="guardarDatos(event)">Guardar</button>
                          </div>
                          
                          <table id="tabla" border="1">
                            <thead>
                              <tr>
                                <th>Rango de fecha</th>
                                <th>Días</th>
                                <th>Hora</th>
                                <th>Guía</th>
                              </tr>
                            </thead>
                            <tbody>
                            </tbody>
                          </table>

                    </div>


                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="button">Button</button>
                    <button class="btn btn-primary" type="button">Button</button>
                  </div>
                
        </div>
    </div>
</body>

{% endblock %}
