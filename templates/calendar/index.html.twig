{% block main %}
    <div style="max-width: 1000px; margin: auto" id='calendar'></div>

  <!-- Modal para editar evento -->
    <div class="modal fade" id="editEventModal" tabindex="-1" aria-labelledby="editEventModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editEventModalLabel">Editar Evento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Campos de edición del evento -->
                    <label for="eventTitle">Título del Evento</label>
                    <input type="text" id="eventTitle" class="form-control">
                   <label for="selectGuia">Selecciona un guía</label>
                           <select name="selectGuia" id="selectGuia">
                           <option disabled selected>....</option>
                             {% for guia in guias %}
                             <option value="{{guia.id}}" >{{ guia.nombre }}-{{guia.id}}</option>
                             {% endfor %}
                            </select> 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="saveChangesBtn">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
